{
  "name": "halloy-themes",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cargo watch -w packages/theme/src/*.rs -s \"wasm-pack build packages/theme\" & vite dev",
    "build": "wasm-pack build packages/theme && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.3",
    "@iconify/json": "^2.2.442",
    "@neondatabase/serverless": "^0.10.4",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.2.1",
    "@types/chroma-js": "^3.1.2",
    "@types/lodash": "^4.17.24",
    "@types/seedrandom": "^3.0.8",
    "chroma-js": "^3.2.0",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^16.5.0",
    "lodash": "^4.17.23",
    "postgres": "^3.4.8",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "pushover-js": "^1.3.2",
    "seedrandom": "^3.0.5",
    "svelte": "^5.53.3",
    "svelte-check": "^4.4.3",
    "tailwindcss": "^4.2.1",
    "theme": "link:packages/theme/pkg",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "unplugin-icons": "^22.5.0",
    "vercel": "^41.7.8",
    "vite": "^6.4.1",
    "vite-plugin-wasm": "^3.5.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.30.1",
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/iosevka": "^5.2.5",
    "@iarna/toml": "^2.2.5",
    "@svelte-plugins/tooltips": "4.0.0-beta.1",
    "@zerodevx/svelte-json-view": "^1.0.11",
    "svelte-french-toast": "^1.2.0"
  }
}
